@model ThucTap1.Models.HuongDan

@{
    ViewData["Title"] = "Edit HuongDan";
}

<h1>Edit HuongDan</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Select for SinhVien -->
            <div class="form-group">
                <label asp-for="MaSV" class="control-label">Sinh viên</label>
                <select asp-for="MaSV" class="form-control" asp-items="ViewBag.SinhVienList"></select>
                <span asp-validation-for="MaSV" class="text-danger"></span>
            </div>

            <!-- Select for DeTai -->
            <div class="form-group">
                <label asp-for="MaDT" class="control-label">Đề tài</label>
                <select asp-for="MaDT" class="form-control" asp-items="ViewBag.DeTaiList"></select>
                <span asp-validation-for="MaDT" class="text-danger"></span>
            </div>

            <!-- Select for GiangVien -->
            <div class="form-group">
                <label asp-for="MaGV" class="control-label">Giảng viên</label>
                <select asp-for="MaGV" class="form-control" asp-items="ViewBag.GiangVienList"></select>
                <span asp-validation-for="MaGV" class="text-danger"></span>
            </div>

            <!-- Input for KetQua -->
            <div class="form-group">
                <label asp-for="KetQua" class="control-label">Kết quả</label>
                <input asp-for="KetQua" class="form-control" />
                <span asp-validation-for="KetQua" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
